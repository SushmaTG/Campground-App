<% include partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>The campgrounds available - </h1>
			<p>
				<a class="btn btn-primary btn-large" href="/new" role="button">Add a new Campground</a>

			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap; float : "left";">
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-md-3 col-sm-3 col-lg-3">
				<div class="thumbnail">
					<img style="width : 500px auto; height : 200px;" src="<%= camp.image %>" >
					<div class="caption">
						<h5><%= camp.name %></h5>
					</div>	
					<p>
					<a class="btn btn-primary" href="/campgrounds/<%= camp._id%>">View Details</a>
					</p>
				</div>
			</div>
		<% }) %>
</div>


<% include partials/footer %>
